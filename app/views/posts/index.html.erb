<h1>FirstAPP</h1>
<%= form_with model: @post, id: "form", local: true do |form| %>
  <%= form.text_field :content %>
  <%= form.submit '投稿する', id: "submit" %>
<% end %>
<%= link_to '新規投稿', '/posts/new' %>
<% @posts.each do |post| %>
  <div class="post">
    <div class="post-date">
      <%= post.created_at %>
    </div>
    <div class="post-content">
      <%= post.content %>
    </div>
  </div>
<% end %>
